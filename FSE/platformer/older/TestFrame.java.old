package platformer;

import java.awt.*;
import javax.swing.*;
import java.awt.geom.*;

public class TestFrame extends JPanel {
	SpriteHandler sh;

	public TestFrame() {
		this.setPreferredSize(new Dimension(800, 600));
		this.setFocusable(true);

		this.sh = SpriteHandler.createFromFile(
			this, "/resources/tiles.png", 70, 2, 2
		);

		if (this.sh == null) {
			System.out.println("Could not be loaded");
		}
	}

	@Override
	public void paint(Graphics g) {
		super.paint(g);
		Graphics2D g2d = (Graphics2D) g;

		if (this.sh == null) {System.out.println("Nope"); return; }
		g2d.drawImage(TileMap.BOX_MYSTERY.getTile(sh), null, 50, 50);
	}
}
